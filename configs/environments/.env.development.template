# ERPGo Development Environment Configuration Template
# Copy this file to .env.development and customize as needed

# ===========================================
# SERVER CONFIGURATION
# ===========================================
SERVER_PORT=8080
ENVIRONMENT=development
LOG_LEVEL=debug
DEBUG_MODE=true

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=postgres://erpgo_dev:dev_password_change_me@localhost:5432/erp_dev?sslmode=disable
DATABASE_SSL_MODE=disable
MAX_CONNECTIONS=10
MIN_CONNECTIONS=2
CONN_MAX_LIFETIME=3600
CONN_MAX_IDLE_TIME=1800

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
JWT_SECRET=dev_secret_change_me_in_production_please
JWT_EXPIRY=24h
REFRESH_EXPIRY=168h
BCRYPT_COST=10
MAX_LOGIN_ATTEMPTS=10
LOCKOUT_DURATION=5m

# ===========================================
# CORS CONFIGURATION (Development)
# ===========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:3001
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_HEADERS=Origin,Content-Type,Accept,Authorization,X-Requested-With
CORS_MAX_AGE=86400
CORS_CREDENTIALS_ENABLED=true
CORS_ENVIRONMENT_WHITELIST=false

# ===========================================
# RATE LIMITING (Disabled in Development)
# ===========================================
RATE_LIMIT_ENABLED=false
RATE_LIMIT_RPS=1000
RATE_LIMIT_BURST=2000
RATE_LIMIT_TTL=1h

# ===========================================
# FILE STORAGE (Local for Development)
# ===========================================
STORAGE_TYPE=local
UPLOAD_PATH=./uploads
S3_BUCKET=
S3_REGION=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_ENDPOINT=

# ===========================================
# EMAIL CONFIGURATION (Mailhog for Development)
# ===========================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_EMAIL=noreply@erpgo.local
EMAIL_FROM=ERPGo Development <noreply@erpgo.local>

# ===========================================
# MONITORING & METRICS
# ===========================================
METRICS_ENABLED=true
METRICS_PATH=/metrics
TRACING_ENABLED=true
TRACING_URL=http://localhost:14268/api/traces

# ===========================================
# API CONFIGURATION
# ===========================================
API_VERSION=v1
API_PREFIX=/api
API_DOCS_ENABLED=true
API_DOCS_PATH=/docs

# ===========================================
# CACHE CONFIGURATION
# ===========================================
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=5m
CACHE_USER_TTL=10m
CACHE_PRODUCT_TTL=15m
CACHE_INVENTORY_TTL=1m

# ===========================================
# BACKGROUND JOBS
# ===========================================
WORKER_ENABLED=true
WORKER_COUNT=2
JOB_RETRY_ATTEMPTS=3

# ===========================================
# DEVELOPMENT SPECIFIC
# ===========================================
# Enable hot reloading
HOT_RELOAD=true

# Enable database query logging
DB_LOG_QUERIES=true

# Enable request/response logging
LOG_REQUESTS=true
LOG_RESPONSES=true

# Enable debug middleware
DEBUG_MIDDLEWARE=true

# Enable profiling
ENABLE_PPROF=true
PPROF_PORT=6060

# Development SSL (self-signed for testing)
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# ===========================================
# THIRD-PARTY SERVICES (Development URLs)
# ===========================================
# Payment gateway (test mode)
PAYMENT_GATEWAY_URL=https://api.test.paymentprovider.com
PAYMENT_GATEWAY_KEY=test_key_change_me

# SMS service (test mode)
SMS_SERVICE_URL=https://api.test.smsprovider.com
SMS_SERVICE_KEY=test_key_change_me

# Analytics (test mode)
ANALYTICS_ID=test_analytics_id
ANALYTICS_URL=https://analytics.test.provider.com

# External API (test mode)
EXTERNAL_API_URL=https://api.test.external.com
EXTERNAL_API_KEY=test_api_key_change_me

# ===========================================
# FEATURE FLAGS (Development)
# ===========================================
FEATURE_NEW_DASHBOARD=true
FEATURE_ADVANCED_REPORTING=true
FEATURE_BETA_FEATURES=true
FEATURE_EXPERIMENTAL_UI=true
FEATURE_DEBUG_ENDPOINTS=true

# ===========================================
# PERFORMANCE SETTINGS (Development)
# ===========================================
# Lower timeouts for development
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s
SERVER_IDLE_TIMEOUT=60s

# Database query timeout
DB_QUERY_TIMEOUT=30s

# Redis connection timeout
REDIS_CONN_TIMEOUT=5s

# HTTP client timeout
HTTP_CLIENT_TIMEOUT=10s

# ===========================================
# SECURITY SETTINGS (Development - Less Strict)
# ===========================================
# Allow weak passwords for testing
ALLOW_WEAK_PASSWORDS=true

# Skip email verification in development
SKIP_EMAIL_VERIFICATION=true

# Enable test endpoints
ENABLE_TEST_ENDPOINTS=true

# Disable HTTPS enforcement
HTTPS_ENFORCEMENT_DISABLED=true

# Session settings
SESSION_SECRET=dev_session_secret_change_me
SESSION_TIMEOUT=24h