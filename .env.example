# ERPGo Environment Configuration Example
# Copy this file to .env and update the values for your environment

# Server Configuration
SERVER_PORT=8080
ENVIRONMENT=development
LOG_LEVEL=info
DEBUG_MODE=false

# Database Configuration
DATABASE_URL=postgres://localhost/erp?sslmode=disable
MAX_CONNECTIONS=20
MIN_CONNECTIONS=5
CONN_MAX_LIFETIME=3600
CONN_MAX_IDLE_TIME=1800

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=24h
REFRESH_EXPIRY=168h

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Origin,Content-Type,Accept,Authorization

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPS=100
RATE_LIMIT_BURST=200
RATE_LIMIT_TTL=1h

# File Storage Configuration
STORAGE_TYPE=local
UPLOAD_PATH=./uploads

# S3 Configuration (if using S3 storage)
S3_BUCKET=
S3_REGION=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_ENDPOINT=

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_EMAIL=your-email@gmail.com
EMAIL_FROM="ERPGo <your-email@gmail.com>"

# Monitoring and Metrics Configuration
METRICS_ENABLED=true
METRICS_PATH=/metrics
TRACING_ENABLED=false
TRACING_URL=

# Security Configuration
BCRYPT_COST=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=15m

# API Configuration
API_VERSION=v1
API_PREFIX=/api
API_DOCS_ENABLED=true
API_DOCS_PATH=/docs

# Cache Configuration
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=5m
CACHE_USER_TTL=10m
CACHE_PRODUCT_TTL=15m
CACHE_INVENTORY_TTL=1m

# Background Jobs Configuration
WORKER_ENABLED=true
WORKER_COUNT=5
JOB_RETRY_ATTEMPTS=3

# Development Overrides
# Uncomment these for development environment

# ENVIRONMENT=development
# LOG_LEVEL=debug
# DEBUG_MODE=true
# API_DOCS_ENABLED=true
# METRICS_ENABLED=true
# TRACING_ENABLED=false

# Production Overrides
# Uncomment these for production environment

# ENVIRONMENT=production
# LOG_LEVEL=info
# DEBUG_MODE=false
# RATE_LIMIT_ENABLED=true
# RATE_LIMIT_RPS=100
# BCRYPT_COST=14
# MAX_LOGIN_ATTEMPTS=3
# LOCKOUT_DURATION=30m

# Test Configuration
# These values are used automatically when running tests

# DATABASE_URL=postgres://localhost/erp_test?sslmode=disable
# REDIS_URL=redis://localhost:6379/1
# LOG_LEVEL=error
# CACHE_ENABLED=false
# METRICS_ENABLED=false
# API_DOCS_ENABLED=false